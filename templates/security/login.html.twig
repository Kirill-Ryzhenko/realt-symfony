{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block body %}
  <div class="row">
    <div class="col s12 m8 l6 offset-m2 offset-l3">
      {% if error %}
        <p class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
      {% endif %}
      
      <form method="post">
        <h1>Вход</h1>
        
        <div class="input-field">
          <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                 class="form-control validate" autocomplete="email" required autofocus>
          <label for="inputEmail">Email</label>
          <span class="helper-text" data-error="Введите email"></span>
        </div>
        
        <div class="input-field">
          <input type="password" name="password" id="inputPassword" class="form-control validate"
                 autocomplete="current-password" required>
          <label for="inputPassword">Пароль</label>
          <span class="helper-text" data-error="Введите пароль"></span>
        </div>
        
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        
        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}
        
        <button type="submit" class="btn btn-primary">Войти</button>
      </form>
    </div>
  </div>
{% endblock %}
