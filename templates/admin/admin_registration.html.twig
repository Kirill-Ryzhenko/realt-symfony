{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
  <div class="row">
    <div class="col s6 offset-s3">
      <h1>Регистрация</h1>
      {{ form_start(form) }}
      <div class="input-field">
        {{ form_widget(form.email, {'attr': {'class': 'form-control validate'}}) }}
        {{ form_label(form.email, 'Email') }}
        <span class="helper-text" data-error="Введите email"></span>
      </div>
      
      <div class="input-field">
        {{ form_widget(form.password.first, {'attr': {'class': 'form-control validate'}}) }}
        {{ form_label(form.password.first, 'Введите пароль') }}
        <span class="helper-text" data-error="Введите пароль"></span>
      </div>
      
      <div class="input-field">
        {{ form_widget(form.password.second, {'attr': {'class': 'form-control validate'}}) }}
        {{ form_label(form.password.second, 'Повторите пароль') }}
        <span class="helper-text" data-error="Повторите пароль"></span>
      </div>
      
      <button type="submit" class="btn btn-primary">Регистрация</button>
    </div>
    {{ form_end(form) }}
  </div>
{% endblock %}